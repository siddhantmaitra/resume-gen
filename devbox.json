{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.14.0/.schema/devbox.schema.json",
  "packages": [
    "typst@latest",
    "typst-live@latest"
  ],
  "shell": {
    "init_hook": [
      "echo 'Welcome to devbox!' > /dev/null"
    ],
    "scripts": {
      "server": "typst-live src/main.typ",
      "build": ["mkdir -p output","typst compile src/main.typ output/resume-siddhant-maitra.pdf"]
    }
  }
}