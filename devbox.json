{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.14.0/.schema/devbox.schema.json",
  "packages": [
    "typst@latest",
    "typst-live@latest",
    "typstyle@latest"
  ],
  "shell": {
    "init_hook": [
      "echo 'Welcome to devbox!' > /dev/null",
      "unset SOURCE_DATE_EPOCH"
    ],
    "scripts": {
      "server": "typst-live src/main.typ --port \"6752\" --root . --input data=\"../data/${1:-sample.toml}\"",
      "fmt-all": "typstyle format-all src",
      "build": [
        "mkdir -p output",
        "commit=$(git log -1 --format=%h)",
        "buildDate=$(date +%y-%m-%d)",
        "name=${2:-JohnDoe}",
        "data=\"../data/${1:-sample.toml}\"",
        "typst compile --root . src/main.typ --input data=${data} output/Resume_${name}_${buildDate}.pdf"
      ]
    }
  }
}
